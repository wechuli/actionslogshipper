{
  "name": "actionslogshipper",
  "version": "1.0.0",
  "description": "A simple tool that receives workflow_run event, downloads the logs and ships to a supported blob provider",
  "keywords": [
    "actions",
    "blob",
    "logs"
  ],
  "homepage": "https://github.com/wechuli/actionslogshipper#readme",
  "bugs": {
    "url": "https://github.com/wechuli/actionslogshipper/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wechuli/actionslogshipper.git"
  },
  "license": "MIT",
  "author": "wechuli",
  "main": "src/index.ts",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "scripts": {
    "build": "tsc",
    "start:dev": "tsx src/index.ts --watch",
    "start:prod": "node ./dist/index.js",
    "test": "jest"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.7.2",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.1",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "zod": "^4.1.12"
  }
}
